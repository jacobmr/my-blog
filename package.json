{
  "name": "my-blog",
  "version": "1.0.0",
  "description": "A modern blog built with Hugo and PaperMod theme",
  "scripts": {
    "dev": "hugo server --buildDrafts --bind=0.0.0.0",
    "build": "hugo",
    "clean": "rm -rf public resources",
    "new-post": "hugo new content posts/$(date +%Y-%m-%d)-${POST_NAME:-new-post}.md",
    "preview": "hugo server --buildDrafts --buildFuture --bind=0.0.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jacobmr/my-blog.git"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {},
  "engines": {
    "hugo": ">=0.120.0"
  }
}